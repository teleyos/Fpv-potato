extends ColorRect

func _ready() -> void:
    _reposition()
    var win := get_window()
    if win:
        win.size_changed.connect(_on_window_resized)

func _on_window_resized() -> void:
    _reposition()

func _reposition() -> void:
    var win := get_window()
    if win == null:
        return
    var ws: Vector2 = Vector2(win.size)
    # In Godot 4: rect_position -> position, rect_size -> size
    position = Vector2(
        (ws.x - size.x) * 0.5,
        (ws.y - size.y) * 0.5
    )

